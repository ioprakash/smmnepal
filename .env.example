# SMM Nepal Environment Configuration
# Copy this file to .env and update with your cPanel values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For cPanel: DB_HOST is usually 'localhost'
# Find credentials in cPanel â†’ MySQL Databases
DB_HOST=localhost
DB_DATABASE=cpanel_username_smmnepal
DB_USERNAME=cpanel_username_smmnepal_user
DB_PASSWORD=your_secure_database_password

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# ============================================
# SITE CONFIGURATION
# ============================================
SITE_NAME=SMM Nepal
SITE_TITLE=SMM Nepal - Social Media Marketing Panel
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# ============================================
# MAIL CONFIGURATION (Optional)
# ============================================
# For cPanel: use 'sendmail' or local mail relay
MAIL_DRIVER=sendmail
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME="SMM Nepal"

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ============================================
# SECURITY
# ============================================
# Generate a secure random string for APP_KEY (32+ characters)
APP_KEY=your_secure_random_key_here_change_me

# ============================================
# ANALYTICS & TRACKING (Optional)
# ============================================
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# ============================================
# API KEYS (If app uses external services)
# ============================================
PAYMENT_GATEWAY_KEY=
PAYMENT_GATEWAY_SECRET=
SMS_API_KEY=
EMAIL_API_KEY=
