{% include 'header1.twig' %}

<div class="container mt-5">
  <div class="row">
    <!-- Dashboard Stats -->
    <div class="col-md-3 mb-4">
      <div class="card shadow-sm dashboard-card" aria-label="Total Users">
        <div class="card-body text-center">
          <h5 class="card-title">Users</h5>
          <p class="card-text display-4">{{ stats.users }}</p>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="card shadow-sm dashboard-card" aria-label="Total Orders">
        <div class="card-body text-center">
          <h5 class="card-title">Orders</h5>
          <p class="card-text display-4">{{ stats.orders }}</p>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="card shadow-sm dashboard-card" aria-label="Revenue">
        <div class="card-body text-center">
          <h5 class="card-title">Revenue</h5>
          <p class="card-text display-4">${{ stats.revenue }}</p>
        </div>
      </div>
    </div>
    <div class="col-md-3 mb-4">
      <div class="card shadow-sm dashboard-card" aria-label="Active Services">
        <div class="card-body text-center">
          <h5 class="card-title">Services</h5>
          <p class="card-text display-4">{{ stats.services }}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-wrap justify-content-between align-items-center">
          <h5 class="card-title mb-0">Quick Actions</h5>
          <div>
            <a href="/admin/add-user" class="btn btn-primary mr-2" aria-label="Add User">Add User</a>
            <a href="/admin/add-service" class="btn btn-success mr-2" aria-label="Add Service">Add Service</a>
            <a href="/admin/orders" class="btn btn-info" aria-label="View Orders">View Orders</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Recent Activity</h5>
          <ul class="list-group list-group-flush">
            {% for activity in recent_activity %}
              <li class="list-group-item">{{ activity }}</li>
            {% else %}
              <li class="list-group-item text-muted">No recent activity.</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

{% include 'footer.twig' %}

<style>
.dashboard-card {
  border-radius: 12px;
  background: #f8fafc;
  transition: box-shadow 0.2s;
}
.dashboard-card:focus-within, .dashboard-card:hover {
  box-shadow: 0 0 0 3px #357ebd33;
  outline: none;
}
.display-4 {
  font-size: 2.5rem;
  font-weight: 700;
  color: #357ebd;
}
.card-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #222;
}
.btn {
  min-width: 120px;
  font-size: 1rem;
  border-radius: 6px;
}
</style>
